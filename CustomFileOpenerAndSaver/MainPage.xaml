<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CustomFileOpenerAndSaver.MainPage">

    <VerticalStackLayout Padding="30">
        <!-- Кнопка для добавления двоичного файла -->
        <Button Text="Добавить двоичный файл" Clicked="OnAddBinaryFileClicked"/>

        <!-- Кнопка для выбора двоичного файла -->
        <Button Text="Выбрать двоичный файл" Clicked="OnSelectBinaryFileClicked"/>

        <!-- Список для отображения файлов -->
        <ListView x:Name="fileListView" Margin="20" ItemSelected="OnFileSelected" />
    </VerticalStackLayout>

</ContentPage>
