<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CustomFileOpenerAndSaver.MainPage">

    <VerticalStackLayout Padding="30">
        <!-- Поле для ввода названия файла -->
        <Label Text="Введите название файла:" />
        <Entry x:Name="fileNameEntry" Placeholder="Название файла" />

        <!-- Поле для ввода содержимого файла -->
        <Label Text="Введите содержимое файла:" />
        <Editor x:Name="fileContentEditor" Placeholder="Содержимое файла" HeightRequest="100"/>

        <!-- Кнопка для сохранения файла -->
        <Button Text="Сохранить файл" Clicked="OnSaveFileClicked" />

        <!-- Кнопка для выбора двоичного файла -->
        <Button Text="Выбрать двоичный файл" Clicked="OnSelectBinaryFileClicked"/>

        <!-- Список для отображения файлов -->
        <ListView x:Name="fileListView" Margin="20" ItemSelected="OnFileSelected" />
    </VerticalStackLayout>

</ContentPage>
